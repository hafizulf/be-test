generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  code String @unique @db.VarChar(100)
  title String @db.VarChar(100)
  author String @db.VarChar(100)
  stock Int

  @@map("books")
}

model Member {
  code String @unique @db.VarChar(100)
  name String @db.VarChar(100)

  @@map("members")
}
